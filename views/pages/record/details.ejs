<%- include("../../fragments/header.ejs") %>
<main>
    <h2>Szczegóły płyty</h2>
    <form class="form">
        <label for="recordName">Tytuł:</label>
        <input type="text" name="recordName" id="recordName" value="Bleach" disabled required />

        <label for="artistName">Artysta:</label>
        <input type="text" name="artistName" id="artistName" value="Nirvana" disabled required />

        <label for="price">Cena za dzień:</label>
        <input type="number" name="price" min="0.00" id="price" value="14.00" disabled required />

        <label for="unit">Ilość dostępnych:</label>
        <input type="number" name="unit" id="unit" value="8" disabled required />
    </form>
